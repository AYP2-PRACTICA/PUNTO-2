#include<string.h>
#include<iostream>
#include<fstream>

using namespace std;


struct estudiante
{
	string nom;
	string apell;
}
struct nodo
{
	struct estudiante info;
	struct nodo *sgte;
	struct nodo *ante;
};

struct nodo *crearlis()
{
	struct nodo *lista;
	lista=NULL;
	return lista;
}
struct nodo *insertarinicio (struct nodo *lista,int valor)
{
	
	struct nodo *q;
	q=new(struct nodo);
	q->info=valor;
	q->sgte=lista;	
	lista=q;
	return lista;
}
struct nodo *insertardesdeArchivo(struct nodo *lista)
{
	int infoArc;
	ifstream archivo;
	archivo.open("archivo lista.txt");
	if (archivo.is_open())
	{
	//	lista=crearlis();
		while(!archivo.eof())
		{
			archivo>>infoArc;
			lista=insertarinicio(lista,infoArc);
		}
		archivo.close();
	}
	else
	{
		cout<<"********   Archivo no encontrado   ******"<<endl;
	}
	return lista;
}

struct nodo *mostrarlista (struct nodo *cabeza)
{
	int i=1;
	struct nodo *p;
	
	p=cabeza->sgte;
	
	cout<<" IMPRESION DE LA LISTA"<<endl;
	
	while(p!=NULL)
	{
		cout<< ' '<<i<<")"<<p->info.cc<<"\t"<<p->info.nom<<"\t"<<p->info.nota<<endl;
		p=p->sgte;
		i++;
	}
	system("pause");
	
}


struct nodo *convertirlistadoble (struct nodo *lista)
{
	struct nodo *p,*q;
	struct nodo *cabeza;
	cabeza=new(struct nodo);
	p=lista;
	cabeza->sgte=p;
	cabeza->ant=NULL;
	p->ant=cabeza;
	q=lista;
	while (p!=NULL)
	{
		p=p->sgte;
		p->ant=q->sgte;
		q=q->sgte;
	}
	
	return cabeza;
}

void ordenarEstudiantes(struct nodo *lista)
{
	int j,k, salto, tam;
